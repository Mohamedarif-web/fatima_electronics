{
  "name": "fatima_electronics",
  "private": true,
  "version": "1.0.0",
  "description": "Complete Business Management System for Enterprises - Sales, Purchase, Inventory, Reports & GST Invoice Generation",
  "author": "Fatima Electronics",
  "type": "module",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite --port 5179",
    "build": "vite build",
    "electron": "electron .",
    "start": "concurrently -k \"vite --port 5179\" \"wait-on http://localhost:5179 && ELECTRON_START_URL=http://localhost:5179 npx electron . --no-sandbox\"",
    "build:web": "vite build",
    "rebuild": "npx @electron/rebuild --version=19.1.9",
    "build:electron": "npm run build:web && npm run rebuild && electron-builder",
    "build:win": "npm run build:web && npx electron-builder --win --x64 --publish=never",
    "build:win:fast": "npm run build:web && npx electron-builder --win --x64 --publish=never --config.compression=store",
    "build:mac": "npm run build:web && npm run rebuild && electron-builder --mac",
    "build:linux": "npm run build:web && npm run rebuild && electron-builder --linux",
    "dist": "npm run build:web && npm run rebuild && electron-builder --publish=never"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "file-saver": "^2.0.5",
    "html2pdf.js": "^0.12.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.8.0",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.2.13",
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^7.6.0",
    "electron": "^19.1.9",
    "electron-builder": "^23.6.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.3.0",
    "vite": "^4.5.0",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.fatimaelectronics.app",
    "productName": "Fatima Electronics",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "node_modules/sqlite3",
        "to": "node_modules/sqlite3",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "electron/database/schema.sql",
        "to": "database/schema.sql"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName} Setup ${version}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.business",
      "minimumSystemVersion": "10.11.0"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Fatima Electronics"
    },
    "dmg": {
      "title": "Fatima Electronics",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
